{
  "name": "financial-management-app",
  "version": "1.0.0",
  "description": "Financial Management System with Income/Expense, OPO, and Debt tracking",
  "type": "module",
  "main": "server/index.js",
  "scripts": {
    "build": "vite build",
    "client": "vite",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "preview": "vite preview",
    "server": "nodemon server/index.js",
    "start": "node server/index.js"
  },
  "build": {
    "appId": "com.financial.app",
    "productName": "Financial Management",
    "directories": {
      "output": "release"
    },
    "files": [
      "main.mjs",
      "dist/**/*",
      "server/**/*",
      "package.json"
    ],
    "asar": true,
    "win": {
      "target": [
        "nsis"
      ]
    }
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.2.4",
    "@chakra-ui/react": "^2.10.9",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@react-pdf/renderer": "^4.3.1",
    "@tailwindcss/vite": "^4.1.15",
    "axios": "latest",
    "bcryptjs": "latest",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "latest",
    "date-fns": "^3.0.0",
    "dotenv": "latest",
    "express": "latest",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.0.1",
    "file-saver": "^2.0.5",
    "framer-motion": "^12.23.24",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "jiti": "latest",
    "jsonwebtoken": "latest",
    "jspdf": "^3.0.3",
    "jspdf-autotable": "^5.0.2",
    "less": "latest",
    "lightningcss": "latest",
    "lucide-react": "^0.454.0",
    "mongoose": "latest",
    "papaparse": "^5.5.3",
    "pdfkit": "^0.13.0",
    "prop-types": "^15.8.1",
    "react": "^19",
    "react-dom": "^19",
    "react-hot-toast": "^2.6.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^6.28.0",
    "recharts": "latest",
    "sass": "latest",
    "sass-embedded": "latest",
    "stylus": "latest",
    "sugarss": "latest",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "terser": "latest",
    "tsx": "latest",
    "tw-animate-css": "latest",
    "validator": "^13.15.15",
    "yaml": "latest"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.15",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.21",
    "nodemon": "^3.0.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.15",
    "typescript": "^5",
    "vite": "^5.0.0"
  }
}
